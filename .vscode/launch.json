    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend/main.go",
            "args": [
                "-port",
                "8080"
            ]
        },
        {
            "name": "Launch Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
              "run",
              "dev",
              "--",
              "open"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "port": 9229
        }
    ]
}